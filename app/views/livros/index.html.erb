<div class="container">
  <div class="row">
    <%= render 'shared/notices', resource: current_usuario %>
  </div>
  <div class="page-wrapper">
    <header class="page-header d-print-none" tabindex="0">
      <div class="container-xl">
        <div class="row g-2 align-items-center">
          <div class="col">
            <h2 class="page-title">
              Livros
            </h2>
          </div>

          <div class="col-auto ms-auto d-print-none">
            <div class="btn-list">
              <%= form_with url: list_livros_path, method: :get, data: { turbo_frame: 'livros', controller: 'search-form', action: 'input->search-form#submit' } do |form| %>
                <div class="input-icon">
                  <%= form.text_field :search, placeholder: "Search", value: params[:search], class: "form-control border border-blue-500 rounded p-2" %>
                  <span class="input-icon-addon">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0"></path><path d="M21 21l-6 -6"></path></svg>
                  </span>
                </div>
              <% end %>
              <% if current_usuario.admin? %>
                <%= link_to new_livro_path, class: "btn btn-primary d-none d-sm-inline-block" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
                  Criar novo livro
                <%end%>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </header>
    <!-- Page body -->
    <main class="page-body" tabindex="0">
      <div class="container-xl">
        <%= render 'livros', livros: @livros %>
      </div>
    </main>
  </div>
</div>

<%= turbo_frame_tag 'modal' %>